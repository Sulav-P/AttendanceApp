<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendanceView.AttenadanceViewMain"
    android:background="@drawable/blue3"
    android:orientation="vertical">

    <Button
        android:id="@+id/AttendChoosePerson"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:background="@drawable/round_button"
        android:text="INDIVIDUAL SINGLE DAY ATTENDANCE"
        android:layout_alignParentLeft="true"
        tools:ignore="RtlCompat" />



    <Button
        android:id="@+id/AttendChooseClass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="253dp"
        android:background="@drawable/round_button"
        android:text="WHOLE ClASS ATTENDANCE"
        android:layout_alignParentLeft="true"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/he"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp" />

</RelativeLayout>